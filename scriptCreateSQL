--create databases:

CREATE DATABASE lessons
    WITH
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'Russian_Russia.1251'
    LC_CTYPE = 'Russian_Russia.1251'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;

--create table:
	
CREATE TABLE task
(
    id uuid NOT NULL,
    status character varying(255) COLLATE pg_catalog."default",
    "timestamp" timestamp without time zone,
    CONSTRAINT task_pkey PRIMARY KEY (id)
	)


-- альтернативный вариант при создании из терминала:

CREATE DATABASE lessons;
\c lessons;
 GRANT ALL PRIVILEGES ON DATABASE "lessons" to postgres;
CREATE TABLE task
(
    id uuid NOT NULL,
    status character varying(255) COLLATE pg_catalog."default",
    "timestamp" timestamp without time zone,
    CONSTRAINT task_pkey PRIMARY KEY (id)
	)